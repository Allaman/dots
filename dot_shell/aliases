# brew
alias \
  pacup='brew upgrade' \
  pacin='brew install' \
  pacls='brew list' \
  paclls='brew leaves' \
  pacse='brew search' \
  pacrm='brew uninstall'

# nix
alias \
  nflakeupdate='nix flake update' \
  nflakerebuild='sudo nixos-rebuild switch --flake /etc/nixos#thinkpad' \
  ndevelop='nix develop --command zsh'

alias -g NE='2> /dev/null' # error
alias -g DN='> /dev/null' # stdout
alias -g NUL='> /dev/null 2>&1' # stdout and error
alias -g JQ='| jq'
alias -g YQ='| yq'
alias -g B='| bat'

# named directories
hash -d dl=$HOME/Downloads

# Suffix alias
alias -s txt=bat
alias -s json=jless
alias -s md=bat
alias -s toml=bat
alias -s {yml,yaml}="bat -l yaml"
alias -s lua=$EDITOR
alias -s go=$EDITOR
alias -s py=$EDITOR

# Git
alias \
  gst='git status' \
  gs='git status' \
  gdb='git branch -D' \
  gc='git commit' \
  push='git push' \
  pull='git pull' \
  gd='git diff' \
  gtlist='git describe --tags --abbrev=0' \
  gl='git log --ext-diff -u' \
  gco='fzf-git-checkout' \
  gcm='git_switch_default' \
  gcn='git switch -c' \
  gt='gitui' \
  lg='lazygit' \
  del-all-branches-but-current='git branch | grep -v "$(git branch --show-current)" | xargs git branch -D'

