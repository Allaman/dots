# Shell
alias \
  srcbash='source $HOME/.bashrc' \
  srczsh='source $HOME/.zshrc' \
  cls="clear" \
  ..='cd ..' \
  cd3='cd ../../..' \
  cd4='cd ../../../..' \
  cd5='cd ../../../../../' \
  cdl='cd /$HOME/Downloads/' \
  tree1='tree -L 1' \
  tree2='tree -L 2' \
  ll='ls -lh' \
  lla='ls -alh' \
  lsym='ls -l `\find . -maxdepth 1 -type l -print`'

# Better options
